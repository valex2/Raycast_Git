{
  "name": "ical-generator",
  "version": "1.0.0",
  "description": "Raycast extension to parse event details from text and add them to Apple Calendar",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "raycast dev",
    "build": "raycast build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@raycast/api": "^1.58.0",
    "ical-generator": "^3.6.0",
    "raycast": "^1.0.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "...",
    "@typescript-eslint/parser": "...",
    "eslint": "^8.46.0",
    "prettier": "^3.1.2",
    "typescript": "^5.2.2"
  },
  "raycast": {
    "schemaVersion": 1,
    "title": "iCal Generator",
    "icon": "ðŸ“…",
    "commands": [
      {
        "name": "generate-ical",
        "title": "Generate iCal Invite",
        "description": "Parse text and create an iCal invite",
        "mode": "view",
        "arguments": [
          {
            "name": "text",
            "type": "text",
            "placeholder": "Enter event details here"
          }
        ]
      }
    ]
  }
}
